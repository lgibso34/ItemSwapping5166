<!doctype html>
<html lang="en">

<head>
    <title>Car List</title>
    <meta name="description" content="Car List" />
	<meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="../css/master.css" />
    <link rel="stylesheet" type="text/css" href="../css/categories.css" />
</head>

<body>
    <header class="banner">
        <% include partials/header.ejs %>
    </header>
    
    <% include partials/user-navigation.ejs %>
	
    <main>
        <% include partials/site-navigation.ejs %>

        <div id="bread">
                <ul>
                    <li><a href="/index">Home</a></li>
                    <li>></li>
                    <li><a href="/categories">Car List</a></li>
                </ul>
        </div>

        <div id="stuff">
        <% if(typeof bool !== "undefined"){ %>          
                <h1>Other Cars</h1>

           <% }else{ %>

        <h1>Inventory List</h1>
                
            <span>Filter by Brand: </span>

        <div id="formNav">
            <form action="/categories">                
                <input type="submit" value="All Brands"/>
            </form>  
            <form action="/categories">
                <input type="hidden" name="catalogCategory" value="Acura"/>
                <input type="submit" value="Acura" />
            </form>
            <form action="/categories">
                <input type="hidden" name="catalogCategory" value="Volvo"/>
                <input type="submit" value="Volvo"/>
            </form>
            <form action="/categories">
                <input type="hidden" name="catalogCategory" value="Ferrari"/>
                <input type="submit" value="Ferrari"/>
            </form>  
        </div>    
          
         <% } %>
            


            <br>           
            <div id="list" style="width:100%">  
                <% var counter=1; %>   
                
                
                <% cars.forEach(function(item){ %>

                    
                    
                    <form action="/item">
                        <button type="submit" name="itemCode" value="<%= item.itemCode %>" class="btn-link">
                             <strong>
                                 Car <%= counter %>: <%= item.yearModel + " " + item.catalogCategory
                                + " " + item.itemName %>
                            </strong>
                        </button>
                    </form>
                    <% counter++; 
                 }); %>              
                </div>
        
        </div>
    </main>
	
	<footer id="Validation">
        <% include partials/footer.ejs %>
	</footer>
    
</body>
</html>
